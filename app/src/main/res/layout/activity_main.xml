<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text=""
            android:textColor="@color/uptext_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingRight="30dp"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_margin="23dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/CalcButtonSize"
                android:layout_weight="1"
                android:background="@drawable/button_c"
                android:fontFamily="@font/carme"

                android:onClick="clearOnClick"
                android:text="C"
                android:textColor="@color/red"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="bracketsOnClick"
                android:layout_margin="@dimen/CalcButtonSize"

                android:text="("
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="powerOfOnClick"
                android:layout_margin="@dimen/CalcButtonSize"

                android:text=")"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/CalcButtonSize"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:onClick="divisionOnClick"


                android:text="÷"

                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1">


            <Button

                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:padding="0dp"
                android:background="@drawable/button_num"

                                android:layout_margin="@dimen/CalcButtonSize"


                android:onClick="sevenOnClick"
                android:text="7"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="eightOnClick"
                android:layout_margin="@dimen/CalcButtonSize"

                android:text="8"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="nineOnClick"

                                android:layout_margin="@dimen/CalcButtonSize"

                android:text="9"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/CalcButtonSize"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:fontFamily="@font/carme"

                android:onClick="timesOnClick"
                android:text="×"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/four_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="fourOnClick"
                android:text="4"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:textColor="@color/text_color"

                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="fiveOnClick"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="sixOnClick"
                android:text="6"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:onClick="minusOnClick"
                android:text="˗"
                android:layout_margin="@dimen/CalcButtonSize"

                android:textColor="@color/text_color"

                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/CalcButtonSize"

                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="oneOnClick"

                android:text="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:onClick="twoOnClick"
                android:text="2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="threeOnClick"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:text="3"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_op"
                android:onClick="plusOnClick"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:text="+"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:layout_weight="2"
                android:background="@drawable/button_num"
                android:onClick="zeroOnClick"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:onClick="decimalOnClick"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:text="."
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                                android:layout_margin="@dimen/CalcButtonSize"

                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="equalsOnClick"
                android:text="="
                android:textColor="@color/text_color"
                android:textSize="@dimen/calcButtonTextSize"

                 />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>